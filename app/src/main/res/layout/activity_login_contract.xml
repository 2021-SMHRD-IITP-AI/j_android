<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Login_contract">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="410dp"
                android:layout_height="59dp"
                android:layout_marginTop="0dp"
                android:background="#EFEFEF"
                android:fontFamily="@font/jalnan"
                android:gravity="center_horizontal"
                android:text="회원가입"
                android:textColor="#4C4C4C"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/jalnan"
                    android:paddingLeft="55dp"
                    android:text="아이디/비밀번호"
                    android:textColor="#4C4C4C"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/id"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="아이디"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#4C4C4C"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/pw"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="비밀번호"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#4C4C4C"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/menu3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/jalnan"
                        android:paddingLeft="55dp"
                        android:text="회원정보"
                        android:textColor="#4C4C4C"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="이름"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#4C4C4C"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="340dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/h_p"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="휴대폰번호"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#4C4C4C"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/jalnan"
                        android:paddingLeft="55dp"
                        android:text="이메일"
                        android:textColor="#4C4C4C"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="0"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="이메일"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#4C4C4C"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/jalnan"
                        android:paddingLeft="55dp"
                        android:text="주소"
                        android:textColor="#4C4C4C"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="상세주소입력"
                        android:inputType="textPostalAddress"
                        android:paddingLeft="10dp"
                        android:textColor="#000000"
                        android:textColorHint="#4C4C4C"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/jalnan"
                        android:paddingLeft="55dp"
                        android:text="생년월일"
                        android:textColor="#4C4C4C"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/birth"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="생년월일"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:textColor="#040404"
                        android:textColorHint="#4C4C4C"
                        android:textSize="12sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:theme="@style/Theme.Jandroid">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jalnan"
                        android:paddingLeft="55dp"
                        android:paddingTop="30dp"
                        android:text="건강상태체크"
                        android:textColor="#4C4C4C"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="296dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="56dp"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/border"
                        android:entries="@array/array"
                        android:fontFamily="@font/gmarketsansttflight"
                        android:hint="선택"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/black"

                        android:textColorHint="#4C4C4C"
                        android:theme="@style/Theme.Jandroid"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_contract"
                        android:layout_width="296dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="30dp"
                        android:fontFamily="@font/jalnan"
                        android:text="회원가입"
                        app:backgroundTint="#670401"
                        app:cornerRadius="0dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="56dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="359dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
